<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragment_main"
        android:name="gpm.udacity.popularmovies.MainActivityFragment"
        tools:layout="@layout/fragment_main" android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/fragment_detail"
        android:name="gpm.udacity.popularmovies.DetailActivityFragment"
        tools:layout="@layout/fragment_detail" android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

</LinearLayout>